               <div class="app"><span class="lem">śiraḥkarṇākṣi</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] śiraḥkarṇākṣa (<span class="siglum" title="β1">β<sub>1</sub></span> <span class="siglum" title="δ3 Lalchand M-6494">δ<sub>3</sub></span>), jvaraḥ karṇākṣi (<span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span>), karṇanāsākṣi (<span class="siglum" title="δ1 Sampurnananda Library Sarasvati Bhavan 30069">δ<sub>1</sub></span>)</div>
               <div class="app"><span class="lem">vedanāḥ</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] vedanaḥ (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span>), vedanā (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="δ3 Lalchand M-6494">δ<sub>3</sub></span>)</div>
