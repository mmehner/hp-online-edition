               <div class="app"><span class="lem">yogināṃ</span> (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>) ] yogīnāṃ (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>), yoginā (<span class="siglum" title="Δ V19,K3,C7">Δ</span> <span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">icchatām</span> (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span> <span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>) ] icchatā (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="δ3 Lalchand M-6494">δ<sub>3</sub></span> <span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>), icchitā (<span class="siglum" title="δ1 Sampurnananda Library Sarasvati Bhavan 30069">δ<sub>1</sub></span>)</div>
               <div class="app"><span class="lem">nirvīryā</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] nirvījā (<span class="siglum" title="δ1 Sampurnananda Library Sarasvati Bhavan 30069">δ<sub>1</sub></span>), nirvāryā (<span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>)</div>
               <div class="app"><span class="lem">tu</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] ca (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span> <span class="siglum" title="δ1 Sampurnananda Library Sarasvati Bhavan 30069">δ<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span>), sā (<span class="siglum" title="ε1">ε<sub>1</sub></span>)</div>
            </div>
