               <div class="app"><span class="lem">yāmyo</span> (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span> <span class="siglum" title="β1">β<sub>1</sub></span> <span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span>) ] dakṣo (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="Δ V19,K3,C7">Δ</span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>), jānvo (<span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>)</div>
               <div class="app"><span class="lem">paścimena vidhinā</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] tasya bandhanavidhau (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>)</div>
               <div class="app"><span class="lem">dhṛtvā</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] pṛṣṭe (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>)</div>
               <div class="app"><span class="lem">vināśakāri</span> (<span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>) ] vināśakāya (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span>), vināsanaṃ (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>), vināśam āśu (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>), vikāranāśa° (<span class="siglum" title="Δ V19,K3,C7">Δ</span>)</div>
               <div class="app"><span class="lem">yamināṃ</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] janakaṃ (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>), °nakaraṃ (<span class="siglum" title="Δ V19,K3,C7">Δ</span>)</div>
