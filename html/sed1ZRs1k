               <div class="app"><span class="lem">sahasreṣu</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] sahasrāsu (<span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span>), sahasrāṇāṃ (<span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">suṣumṇām</span> (<span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="Δ V19,K3,C7">Δ</span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>) ] sukhumṇām (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>), suṣumṇā (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span>), nāḍīnāṃ (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">iva nāḍiṣu</span> (<span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span> <span class="siglum" title="β1">β<sub>1</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="Δ V19,K3,C7">Δ</span> <span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span>) ] iva nāḍikā (<span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span>), eva nāḍiṣu (<span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>), ca nāḍiṣu (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span>), malaśodhanam (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
            </div>
            <details class="testimonia-d">
               <summary>Testimonia</summary>
