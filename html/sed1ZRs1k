               <div class="app"><span class="lem">kathitāni</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] kathitāna (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>), śivena (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span>)</div>
               <div class="app"><span class="lem">tu</span> (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span> <span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="ε1">ε<sub>1</sub></span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>) ] vai (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="δ1 Sampurnananda Library Sarasvati Bhavan 30069">δ<sub>1</sub></span> <span class="siglum" title="δ3 Lalchand M-6494">δ<sub>3</sub></span>), ca (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
