               <div class="app"><span class="lem">śramadair bahubhiḥ</span> (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>) ] śramādau bahubhiḥ (<span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span>), samastair bahubhiḥ (<span class="siglum" title="ε1">ε<sub>1</sub></span>), samastabahubhiḥ (<span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span>), śramadairghyādibhiḥ (<span class="siglum" title="Δ V19,K3,C7">Δ</span>), kim ādyair bahubhiḥ (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>), kim anyair bahubhiḥ (<span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">kiṃ syāt</span> (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="Δ V19,K3,C7">Δ</span> <span class="siglum" title="ε3 Sampurnananda Library Sarasvati Bhavan 30051 ε3ac ε3pc">ε<sub>3</sub></span>) ] sadā (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>), yadā (<span class="siglum" title="ε1">ε<sub>1</sub></span>), siddhe (<span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">sati</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] satya (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>), sthite (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>)</div>
