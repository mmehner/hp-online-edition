               <div class="app"><span class="lem">tathaiva</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] tathāva° (<span class="siglum" title="β1">β<sub>1</sub></span>)</div>
               <div class="app"><span class="lem">sevito</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] veśito (<span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span>), saṃcito (<span class="siglum" title="δ2 Privat collection">δ<sub>2</sub></span> <span class="siglum" title="δ3 Lalchand M-6494">δ<sub>3</sub></span>), °rodhito (<span class="siglum" title="β1">β<sub>1</sub></span>)</div>
               <div class="app"><span class="lem">hanti</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] hṛdi (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>)</div>
