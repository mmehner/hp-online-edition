               <div class="app"><span class="lem">virājate</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] vibhrājate (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">rājasaudham</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] rājayogam (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>)</div>
               <div class="app"><span class="lem">āroḍhum</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] ārūḍham (<span class="siglum" title="ε1">ε<sub>1</sub></span>)</div>
               <div class="app"><span class="lem">rohiṇīva</span> (<span class="siglum" title="cett. ceteri">cett.</span>) ] rohiṇī ca (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>), roha eva (<span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span>)</div>
