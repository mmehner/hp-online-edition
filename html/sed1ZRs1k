               <div class="app"><span class="lem">saṃsiddhiṃ</span> (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span> <span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span> <span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span> <span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="γ2 Jodhpur 02241">γ<sub>2</sub></span> <span class="siglum" title="δ1 Sampurnananda Library Sarasvati Bhavan 30069">δ<sub>1</sub></span> <span class="siglum" title="δ2 Privat collection">δ<sub>2</sub></span> <span class="siglum" title="ε4 Jodhpur 23532 ε4i.t. ε4mg. alternative reading written by the first hand in margin or interlinearly (J11)">ε<sub>4</sub></span> <span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>) ] saṃsiddhi (<span class="siglum" title="β1">β<sub>1</sub></span>), saṃsiddhir (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span> <span class="siglum" title="δ3 Lalchand M-6494">δ<sub>3</sub></span> <span class="siglum" title="ε2 NGMPP E-1528-1 / E-1527-7(4)">ε<sub>2</sub></span>), saṃsiddhyaiḥ (<span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>)</div>
               <div class="app"><span class="lem">yacchato</span> (<span class="siglum" title="α2 Jodhpur 02235">α<sub>2</sub></span> <span class="siglum" title="βω Sampurnananda Library Sarasvati Bhavan 29899">β<sub>ω</sub></span> <span class="siglum" title="χ Brahmānanda’s version">χ</span>) ] yakṣyato (<span class="siglum" title="β2 Lalchand M-2089">β<sub>2</sub></span>), yichato (<span class="siglum" title="α1 NGMPP B 62-20 α1ac α1pc">α<sub>1</sub></span>), pracchato (<span class="siglum" title="β1">β<sub>1</sub></span>), gacchato (<span class="siglum" title="Δ V19,K3,C7">Δ</span> <span class="siglum" title="ε2 NGMPP E-1528-1 / E-1527-7(4)">ε<sub>2</sub></span>), gacchate (<span class="siglum" title="γ2 Jodhpur 02241">γ<sub>2</sub></span>), gacchatā (<span class="siglum" title="γ1 NGMPP G 25-2 γ1ac γ1pc">γ<sub>1</sub></span>), gacchata° (<span class="siglum" title="ε4 Jodhpur 23532 ε4i.t. ε4mg. alternative reading written by the first hand in margin or interlinearly (J11)">ε<sub>4</sub></span>), prāpnoty e° (<span class="siglum" title="η1 Sampurnananda Library Sarasvati Bhavan 30109 η1ac η1pc">η<sub>1</sub></span>), pamāta (<span class="siglum" title="η2 MSPP Jodhpur 2230 η2ac η2pc">η<sub>2</sub></span>), niścayo (<span class="siglum" title="α3 GOML 18885">α<sub>3</sub></span>)</div>
